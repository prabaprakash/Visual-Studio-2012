<common:LayoutAwarePage
    x:Name="pageroot"
    x:Class="Sqlite_For_Windows_8_Metro.learn"
     DataContext="{Binding DefaultViewModel, RelativeSource={RelativeSource Self}}"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Sqlite_For_Windows_8_Metro"
    xmlns:common="using:Sqlite_For_Windows_8_Metro.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Resources>
        <!-- TODO: Delete this line if the key AppName is declared in App.xaml -->
        <x:String x:Key="AppName">AppBar Example</x:String>
    </Page.Resources>
    
    
    <Grid Background="Brown" Style="{StaticResource LayoutRootStyle}">
        <VisualStateManager.VisualStateGroups>

            <VisualStateGroup x:Name="ApplicationViewStates">

                <VisualState x:Name="FullScreenLandscape" >
                    <Storyboard >
                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="button3" d:IsOptimized="True"/>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="button3">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Thickness>620,126,0,0</Thickness>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>

            <VisualState x:Name="Filled">
            	<Storyboard>
            		<DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="button1" d:IsOptimized="True"/>
            		<DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="button2" d:IsOptimized="True"/>
            	</Storyboard>
            </VisualState>

                <VisualState x:Name="FullScreenPortrait">
                    <Storyboard>
                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="button7" d:IsOptimized="True"/>
                    </Storyboard>
                </VisualState>

                <VisualState x:Name="Snapped">



                    <Storyboard>
                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="button" d:IsOptimized="True"/>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="button">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Double>164</x:Double>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Height)" Storyboard.TargetName="button">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Double>82</x:Double>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="button">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Thickness>90,96,0,0</Thickness>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="button4" d:IsOptimized="True"/>
                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="button5" d:IsOptimized="True"/>
                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="button6" d:IsOptimized="True"/>
                        <DoubleAnimation Duration="0" To="1" Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="button8" d:IsOptimized="True"/>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="button8">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Double>140</x:Double>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Height)" Storyboard.TargetName="button8">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Double>46</x:Double>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Width)" Storyboard.TargetName="go">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Double>163</x:Double>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Margin)" Storyboard.TargetName="go">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <Thickness>69,183,0,0</Thickness>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                        <ObjectAnimationUsingKeyFrames Storyboard.TargetProperty="(FrameworkElement.Height)" Storyboard.TargetName="go">
                            <DiscreteObjectKeyFrame KeyTime="0">
                                <DiscreteObjectKeyFrame.Value>
                                    <x:Double>90</x:Double>
                                </DiscreteObjectKeyFrame.Value>
                            </DiscreteObjectKeyFrame>
                        </ObjectAnimationUsingKeyFrames>
                    </Storyboard>



                </VisualState>

        </VisualStateGroup>

    </VisualStateManager.VisualStateGroups>
    	<Button x:Name="button" Content="button" HorizontalAlignment="Left" Margin="90,172,0,0" Opacity="0" VerticalAlignment="Top"/>
    	<Button x:Name="button1" Content="button1" HorizontalAlignment="Left" Height="90" Margin="214,369,0,0" Opacity="0" VerticalAlignment="Top" Width="283"/>
    	<Button x:Name="button2" Content="button2" HorizontalAlignment="Left" Height="97" Margin="90,439,0,0" Opacity="0" VerticalAlignment="Top" Width="283"/>
        <Button x:ConnectionId='1' x:Name="button3"  HorizontalAlignment="Left" Height="106" Margin="492,96,0,0" Opacity="0" VerticalAlignment="Top" Width="256"   RenderTransformOrigin="0.5,0.5"                        Style="{StaticResource BackButtonStyle}">
            <Button.Template>
                <ControlTemplate TargetType="Button"/>
            </Button.Template>
            <Button.RenderTransform>
                <CompositeTransform ScaleY="-1"/>
            </Button.RenderTransform>
        </Button>
        <Button x:Name="button4" HorizontalAlignment="Left" Height="95" Margin="90,269,0,0" Opacity="0" VerticalAlignment="Top" Width="164">
            <Button Content="Button" Height="482" Width="474"/>
        </Button>
        <Button x:Name="button5" Content="button5" HorizontalAlignment="Left" Height="133" Margin="90,439,0,0" Opacity="0" VerticalAlignment="Top" Width="220"/>
        <Button x:Name="button6" Content="button6" HorizontalAlignment="Left" Height="72" Margin="90,624,0,0" Opacity="0" VerticalAlignment="Top" Width="164"/>
        <Button x:Name="button7" Content="button7" HorizontalAlignment="Left" Height="255" Margin="214,364,0,0"  Opacity="0" VerticalAlignment="Top" Width="402"/>

        <Button x:Name="go" Content="ok" FontSize="45" Foreground="Black" Background="white" HorizontalAlignment="Left" Margin="616,269,0,0" VerticalAlignment="Top" Height="95" Width="100" CharacterSpacing="1"  >
            
            </Button>
        <Button x:Name="button8" Content="button8" HorizontalAlignment="Left" Margin="38,388,0,0" Opacity="0" VerticalAlignment="Top"/>




    </Grid>
    
</common:LayoutAwarePage>

