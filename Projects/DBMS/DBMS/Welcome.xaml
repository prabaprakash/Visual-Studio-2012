<Window x:Name="load" x:Class="DBMS.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome" Height="409.659" Icon="icon.ico" Width="651.187" Loaded="load_Loaded" Closed="load_Closed">
    <Grid>
        <ListView Name="list1" HorizontalAlignment="Left" Height="378" VerticalAlignment="Top" Width="441" SelectionChanged="ListView_SelectionChanged_1">
            <ListView.View>
                <GridView x:Name="grid" >
                    <GridViewColumn  DisplayMemberBinding="{Binding Name}" Header="Data" Width="150"></GridViewColumn>
                    <GridViewColumn DisplayMemberBinding="{Binding Phone}" Header="Details" Width="285"></GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="Exit" HorizontalAlignment="Left" Height="29" Margin="541,295,0,0" VerticalAlignment="Top" Width="83" Click="Button_Click_1"/>
        <Button Content="Sign Out" HorizontalAlignment="Left" Height="27" Margin="541,236,0,0" VerticalAlignment="Top" Width="83" Click="Button_Click_2"/>

    </Grid>
</Window>
